<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%5p) PID --- [%15.15t] %cyan(%40.40c{1.}) : %m%n</pattern>
        </encoder>
    </appender>
    <logger name="org.globant" level="DEBUG">
        <appender-ref ref="stdout"/>
    </logger>
    <root level="ERROR"/>
</configuration>